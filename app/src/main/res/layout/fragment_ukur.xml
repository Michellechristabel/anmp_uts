<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="ukur"
            type="com.moonnieyy.anmpproject.model.Ukur" />

        <variable
            name="listener"
            type="com.moonnieyy.anmpproject.view.UkurListener" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FragmentUkur">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp">

            <!-- Label Berat Badan -->
            <TextView
                android:id="@+id/labelBeratBadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Berat Badan (kg)"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Input Berat Badan -->
            <EditText
                android:id="@+id/inputBeratBadan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Masukkan berat badan"
                android:inputType="number"
                android:text="@={ukur.weight}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelBeratBadan" />

            <!-- Label Tinggi Badan -->
            <TextView
                android:id="@+id/labelTinggiBadan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Tinggi Badan (cm)"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputBeratBadan" />

            <!-- Input Tinggi Badan -->
            <EditText
                android:id="@+id/inputTinggiBadan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Masukkan tinggi badan"
                android:inputType="number"
                android:text="@={ukur.height}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelTinggiBadan" />

            <!-- Label Usia -->
            <TextView
                android:id="@+id/labelUsia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Usia (tahun)"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/inputTinggiBadan" />

            <!-- Input Usia -->
            <EditText
                android:id="@+id/inputUsia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Masukkan usia"
                android:inputType="number"
                android:text="@={ukur.age}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelUsia" />

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/btnTambahData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Simpan Data"
                android:onClick="@{listener::onSaveClick}"
                app:layout_constraintTop_toBottomOf="@id/inputUsia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>
